<?xml version="1.0" encoding="koi8-r"?>

<project	name   = "MAZlarm"
		nameRU = "MAZlarm">

	<description	text   = "MAZlarm is a small alarm clock made specially for KDE."
			textRU = "MAZlarm -- это маленький будильник, сделанный специально для KDE"
	/>

	<features>
		<feature	text   = "Silently sits in system tray"
				textRU = "Все время тихонько сидит в трее"/>
		<feature	text   = "Have ability to play various music files as alarms (with the help of FMOD)"
				textRU = "Имеет способность к проигрыванию музыкальных файлов в качестве сигналов будильника (с помощью FMOD)"/>
	</features>

	<changes>
		<version num = "0.0.2">
			<change	text   = "Now is uses Qt 3.0"
				textRU = "Теперь использует Qt 3.0"/>
			<change	text   = "'File is application' checkbox is now working"
				textRU = "Опция 'File is application' теперь работает"/>
			<change	text   = "Added FMOD configuration tab"
				textRU = "В опциях добавлена страничка по конфигурированию FMOD"/>
		</version>
		<version num = "0.0.1">
			<change	text   = "Original release"
				textRU = "Первый выпуск"/>
		</version>
	</changes>

