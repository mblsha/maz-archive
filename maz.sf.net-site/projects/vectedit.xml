<?xml version="1.0" encoding="koi8-r"?>

<project	name   = "VectEdit"
		nameRU = "VectEdit">

	<description	text   = "Simple vector graphics editor."
			textRU = "Простой редактор векторной графики."
	/>

	<features>
		<feature	text   = "Supports nodes, lines and filled polygons"
				textRU = "Поддерживает узлы, линии и закрашенные полигоны"/>
		<feature	text   = "Supports colored lines and polygons"
				textRU = "Поддерживает цветные линии и полигоны"/>
		<feature	text   = "It can load background picture on demand"
				textRU = "Может загружать картинку-задник по требованию"/>
	</features>

	<changes>
		<version num = "0.0.1">
			<change	text   = "Original release"
				textRU = "Оригинальный выпуск"/>
		</version>
	</changes>

